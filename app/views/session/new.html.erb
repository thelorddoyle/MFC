
<main class="profile">
    <div class="light top-of-page-light">
        <h1 id="profile">Login</h1>
        <h2>Login and fight!</h2>
    </div>

    <div class='login'>

        <%= form_with url: login_path, local: true do |f| %>

            <%= f.label :email, class: 'login_form_label' %>
            <br><br>
            <%= f.text_field :email %>
            <br><br><br>

            <%= f.label :password, class: 'login_form_label' %>
            <br><br>
            <%= f.password_field :password %>
            <br><br><br>
            <%= f.submit 'Login', class: 'buttonLink2', id: "login-button" %>

        <% end%>

            <% if flash[:error]  %>
            <br>
            <p><strong><%= flash[:error] %></strong></p>
            <br>
            <% end %>
            <br>
            <%= button_to "Sign Up", new_user_path, method: 'GET', class: "buttonLink", id: "signup-button" %>


    </div>

</main>
