<%= form_with model: @user, local: true do |f| %>

    <%= f.label "How much would you like to add?" %>
    <br>
    <%= f.text_field :eth_in_wallet, class: 'form-field-connect', value: 0 %>
    <br><br>

    <%= f.hidden_field :username %>

    <%= f.hidden_field :email, class: 'form-field-connect' %>

    <%= f.hidden_field :password %>
    <br>
    <%= f.hidden_field :password, class: 'form-field-connect' %>
    <br><br>

    <%= f.hidden_field :password_confirmation %>
    <br>
    <%= f.hidden_field :password_confirmation, class: 'form-field-connect' %>
    <br><br>

    <%= f.submit %>
<% end %>

<% if @user.errors.any? %>
<p>Please correct the following errors:</p>
    <ul>
        <% @user.errors.full_messages.each do |e| %>
            <li>
                <%= e %>
            </li>
        <% end %>
    </ul>
<% end %>